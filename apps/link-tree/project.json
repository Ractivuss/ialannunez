{
  "name": "@ialannunez/link-tree",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/link-tree",
  "projectType": "application",
  "tags": ["type:app", "framework:remix"],
  "targets": {
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vite dev",
        "cwd": "apps/link-tree"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "remix vite:build",
        "cwd": "apps/link-tree"
      },
      "outputs": ["{projectRoot}/build"]
    },
    "build:cloudflare": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "node cloudflare/build-cloudflare.js",
          "remix vite:build"
        ],
        "cwd": "apps/link-tree",
        "parallel": false
      },
      "outputs": ["{projectRoot}/build"]
    },
    "start": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vite start",
        "cwd": "apps/link-tree"
      },
      "dependsOn": ["build"]
    },
    "deploy": {
      "executor": "nx:run-commands",
      "options": {
        "command": "wrangler deploy",
        "cwd": "apps/link-tree"
      },
      "dependsOn": ["build:cloudflare"]
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit",
        "cwd": "apps/link-tree"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/link-tree/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/link-tree/jest.config.ts"
      }
    }
  }
}
